# GitHub Personal Access Token (PAT)
# Create this token at: https://github.com/settings/tokens
# Required scopes: repo, workflow, write:org (if working with organization repositories)
GITHUB_TOKEN=your_github_personal_access_token_here

# Repository Configuration
GITHUB_REPOSITORY=harmonyofgaia/GaiaExchanges-c99f8932

# PR Range Configuration (optional)
PR_RANGE_START=22
PR_RANGE_END=34

# Notification Configuration
NOTIFICATION_EMAIL=admin@yourdomain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Automation Settings
ENABLE_AUTO_MERGE=true
ENABLE_NOTIFICATIONS=true
DRY_RUN=false

# Required Labels for Auto-merge (comma-separated)
REQUIRED_LABELS=ready-to-merge,approved

# Branch Protection Settings
REQUIRE_STATUS_CHECKS=true
REQUIRE_REVIEWS=true
MIN_REVIEWS=1